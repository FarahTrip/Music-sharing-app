@model Trippin_Website.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<style>
    .col-md-offset-2 {
        position: relative;
    }
    #submit {
        top: 50%;
        left: 50%;
        margin-top: 20px;
    }
    .input-elements {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    #Rol {
        margin: 7px;
    }

    #atentionare {
        color: red;
    }
    .col-md-10 {
        margin-right: 38px;
        margin-left: 38px;
    }

</style>


<h2 style="text-align:center">Ti-ai uitat parola?</h2>

<div style="width: 100%; height: 100%; display: flex; justify-content: center; align-items: center; ">
<div style="width: 80%; max-width: 800px; background-color: #1a1a1a; padding: 30px; border-radius: 5px; border-color: #9933cc; border-width: 1px; border-style: solid">

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4 style="text-align:center">Introdu email-ul</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
<div class="form-group" style="text-align: center;">
    <div class="col-md-10">
        <div style="align-content:center" class="input-elements">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-offset-2 col-md-10">
        <input id="submit" type="submit" class="btn btn-default" value="Trimite-mi email" />
    </div>
</div>

    }
</div>
    </div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
