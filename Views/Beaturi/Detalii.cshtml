<style>
    .card * {
        text-align: center;
        background-color: #0d1117;
    }
    .card img {
        width: 50%;
        height: 50%;
        object-fit: cover;
        margin: auto;
    }
</style>

<div class="displayInfo"  style="display: flex; justify-content: center; align-items: center; margin-top:30px" >
    <div class="card mb-3">
        <h3 class="card-header">@Model.Name</h3>
        <div class="card-body">
        </div>
        <img src="@links.ElementAt(resultrandom);" alt="Alternate Text" />
        <div class="card-body">
            @if (Model.Description == null)
            {
                <p class="card-text">Nu este adaugata nici o descriptie!</p>

            }
            else
            {
                <p class="card-text">@Model.Description</p>
            }
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">BPM : @Model.Bpm</li>
            @if (Model.Key == null)
            {
                <li class="list-group-item">Key : Nu este setata</li>
            }
            else
            {
                <li class="list-group-item">Key : @Model.Key</li>
            }

            @if (Model.Style == null)
            {
                <li class="list-group-item">Stil : Nici unul ales</li>
            }
            else
            {
                <li class="list-group-item">Stil : @Model.Style</li>
            }
            <li class="list-group-item">Seed poza : @resultrandom</li>
        </ul>
        <div class="card-body">
            <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a>
        </div>
        @if (Model.DateAdded == null)
        {
            <p>Nu stiu cum ai primit eroarea asta bossule sa mor</p>
        }
        else
        {
            <div class="card-footer text-muted">
                @Model.DateAdded
            </div>
        }
    </div>
    </div>
